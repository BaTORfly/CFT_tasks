<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Консольный аппендер -->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Шаблон для форматирования лога -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%15.15t] %c - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Корневой логгер с уровнем DEBUG и привязкой к аппендеру Console -->
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
